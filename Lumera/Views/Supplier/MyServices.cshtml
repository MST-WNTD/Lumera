@@model Lumera.Models.OrganizerServicesViewModel
@using Lumera.Services
@{
    ViewData["Title"] = "My Services - LUMERA";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13a4ec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                    },
                    fontFamily: {
                        "display": ["Manrope"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-stone-800 dark:text-stone-200">
    <div class="flex min-h-screen">
        <!-- Unified Sidebar -->
        <aside class="w-64 bg-white dark:bg-background-dark flex flex-col border-r border-stone-200 dark:border-stone-800">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-primary p-2 rounded-lg">
                    <span class="material-symbols-outlined text-white">event</span>
                </div>
                <h1 class="text-xl font-bold text-stone-900 dark:text-white">LUMERA</h1>
            </div>

            <!-- Organizer Info -->
            <div class="px-6 py-4 border-b border-stone-200 dark:border-stone-800">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                    <div>
                        <p class="font-semibold text-stone-900 dark:text-white">@(Model.Organizer.BusinessName ?? "Business")</p>
                        <p class="text-sm text-stone-500 dark:text-stone-400">Organizer</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 px-4 py-2">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/dashboard">
                    <span class="material-symbols-outlined">dashboard</span> Dashboard
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/events">
                    <span class="material-symbols-outlined">event</span> My Events
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/bookings">
                    <span class="material-symbols-outlined">book_online</span> Bookings & Requests
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg bg-primary/10 dark:bg-primary/20 text-primary font-bold" href="/organizer/services">
                    <span class="material-symbols-outlined">design_services</span> My Services
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/messages">
                    <span class="material-symbols-outlined">mail</span> Messages
                    @if (Model.UnreadMessages > 0)
                    {
                        <span class="bg-red-500 text-white text-xs rounded-full px-2 py-1 ml-auto">@Model.UnreadMessages</span>
                    }
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/profile">
                    <span class="material-symbols-outlined">settings</span> My Profile
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/earnings">
                    <span class="material-symbols-outlined">paid</span> Earnings & Payouts
                </a>
            </nav>

            <!-- Logout Option -->
            <div class="p-4 border-t border-stone-200 dark:border-stone-800 mt-auto">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" asp-controller="Home" asp-action="Index">
                    <span class="material-symbols-outlined">logout</span> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="flex h-16 items-center justify-between border-b border-stone-200 dark:border-stone-800 bg-white dark:bg-background-dark px-6">
                <div class="flex items-center gap-4">
                    <h2 class="text-2xl font-bold text-stone-900 dark:text-white">My Services</h2>
                    <p class="text-stone-500 dark:text-stone-400">Manage your event services</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-stone-500 dark:text-stone-400">search</span>
                        <input class="bg-background-light dark:bg-stone-800 border-none rounded-lg pl-10 pr-4 py-2 focus:ring-2 focus:ring-primary" placeholder="Search services..." type="text" />
                    </div>
                    <button class="p-2 rounded-full hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300">
                        <span class="material-symbols-outlined">notifications</span>
                    </button>
                    <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 p-8 bg-background-light dark:bg-background-dark">
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
                    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">My Services</h2>
                    <a asp-controller="Organizer" asp-action="CreateService" class="flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-primary text-white font-bold text-sm shadow-md hover:bg-opacity-90 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary focus:ring-offset-background-light dark:focus:ring-offset-background-dark">
                        <span class="material-symbols-outlined">add</span>
                        <span>New Service</span>
                    </a>
                </div>

                <div class="border-b border-gray-200 dark:border-gray-700/50 mb-6">
                    <nav aria-label="Tabs" class="flex -mb-px space-x-8">
                        <a aria-current="page" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-primary border-primary" href="#">All Services</a>
                        <a class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-gray-500 dark:text-gray-400 border-transparent hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600" href="#">Active</a>
                        <a class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-gray-500 dark:text-gray-400 border-transparent hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600" href="#">Inactive</a>
                    </nav>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var service in Model.Services)
                    {
                        <div class="bg-white dark:bg-background-dark rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
                            <div class="h-48 bg-gray-200 dark:bg-gray-700 relative">
                                @* ImageUrl removed - use ServiceGallery for images instead *@
                                @if (service.Gallery != null && service.Gallery.Any())
                                {
                                    <img alt="@service.ServiceName" class="w-full h-full object-cover" src="@service.Gallery.First().ImageURL" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center">
                                        <span class="material-symbols-outlined text-gray-400 text-4xl">design_services</span>
                                    </div>
                                }
                                <div class="absolute top-4 right-4">
                                    @{
                                        var statusClass = service.IsActive ? "bg-green-500" : "bg-red-500";
                                    }
                                    <span class="inline-block w-3 h-3 rounded-full @statusClass"></span>
                                </div>
                            </div>
                            <div class="p-4">
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="font-bold text-lg text-gray-900 dark:text-white">@service.ServiceName</h3>
                                    <span class="text-lg font-bold text-primary">@($"₱{service.Price:N2}")</span>
                                </div>
                                <p class="text-sm text-slate-500 dark:text-slate-400 mb-4 line-clamp-2">@service.ServiceDescription</p>
                                <div class="flex justify-between items-center">
                                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                        <span class="material-symbols-outlined text-base mr-1">star</span>
                                        <span>@service.AverageRating.ToString("0.0")</span>
                                        <span class="mx-1">·</span>
                                        <span>@service.TotalReviews reviews</span>
                                    </div>
                                    <div class="flex gap-2">
                                        <a href="/organizer/services/edit/@service.ServiceID" class="text-primary hover:text-primary/80">
                                            <span class="material-symbols-outlined">edit</span>
                                        </a>
                                        <button class="text-gray-400 hover:text-red-500" onclick="deleteService(@service.ServiceID)">
                                            <span class="material-symbols-outlined">delete</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (!Model.Services.Any())
                {
                    <div class="text-center py-12">
                        <span class="material-symbols-outlined text-gray-300 dark:text-gray-600 text-6xl mb-4">design_services</span>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">No services created yet</p>
                        <a asp-controller="Organizer" asp-action="CreateService" class="inline-flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-primary text-white font-bold text-sm shadow-md hover:bg-opacity-90 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary focus:ring-offset-background-light dark:focus:ring-offset-background-dark">
                            <span class="material-symbols-outlined">add</span> Create Your First Service
                        </a>
                    </div>
                }
            </main>
        </div>
    </div>

    <script>
        function deleteService(serviceId) {
            if (confirm('Are you sure you want to delete this service?')) {
                fetch(`/organizer/deleteservice/${serviceId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Failed to delete service');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete service');
                });
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Search functionality
            const searchInput = document.querySelector('input[placeholder="Search services..."]');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    console.log('Searching for:', e.target.value);
                });
            }

            // Notification button
            const notificationBtn = document.querySelector('button .material-symbols-outlined');
            if (notificationBtn) {
                notificationBtn.closest('button').addEventListener('click', function() {
                    alert('Notifications feature coming soon!');
                });
            }
        });
    </script>
</body>
</html>