@model Lumera.Models.OrganizerMessagesViewModel
@{
    ViewData["Title"] = "Messages - LUMERA";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13a4ec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                    },
                    fontFamily: {
                        "display": ["Manrope"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        /* CRITICAL: Ensure body and html don't hide content */
        body, html {
            overflow-x: hidden;
        }

        /* Fixed height layout styles */
        .messages-main-wrapper {
            height: calc(100vh - 4rem);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            position: relative;
        }

        .messages-content-wrapper {
            flex: 1;
            min-height: 0;
            display: flex;
            gap: 1.5rem;
            padding: 2rem;
            overflow: hidden;
        }

        .conversations-panel {
            width: 33.333333%;
            display: flex;
            flex-direction: column;
            min-height: 0;
            overflow: hidden;
            flex-shrink: 0;
        }

        .chat-panel {
            width: 66.666667%;
            display: flex;
            flex-direction: column;
            min-height: 0;
            overflow: hidden;
            flex-shrink: 0;
        }

        .conversations-list {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            min-height: 0;
        }

        .messages-area {
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 1rem;
            min-height: 0;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

            /* CRITICAL FIX: Ensure message bubbles don't overflow */
            .messages-area > div {
                max-width: 100%;
                word-wrap: break-word;
                overflow-wrap: break-word;
            }

            /* Fix for message content inside bubbles */
            .messages-area p {
                word-wrap: break-word !important;
                overflow-wrap: break-word !important;
                word-break: break-word !important;
                max-width: 100%;
            }

            /* Ensure message bubbles themselves break words */
            .messages-area .rounded-lg {
                word-wrap: break-word;
                overflow-wrap: break-word;
                word-break: break-word;
                max-width: 100%;
            }

            /* Custom scrollbar */
            .conversations-list::-webkit-scrollbar,
            .messages-area::-webkit-scrollbar {
                width: 6px;
            }

            .conversations-list::-webkit-scrollbar-track,
            .messages-area::-webkit-scrollbar-track {
                background: transparent;
            }

            .conversations-list::-webkit-scrollbar-thumb,
            .messages-area::-webkit-scrollbar-thumb {
                background: rgba(0, 0, 0, 0.2);
                border-radius: 3px;
            }

        .dark .conversations-list::-webkit-scrollbar-thumb,
        .dark .messages-area::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Ensure flex items don't shrink unexpectedly */
        header {
            flex-shrink: 0 !important;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-stone-800 dark:text-stone-200">
    <div class="flex min-h-screen">
        <!-- Unified Sidebar -->
        <aside class="w-64 bg-white dark:bg-background-dark flex flex-col border-r border-stone-200 dark:border-stone-800">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-primary p-2 rounded-lg">
                    <span class="material-symbols-outlined text-white">event</span>
                </div>
                <h1 class="text-xl font-bold text-stone-900 dark:text-white">LUMERA</h1>
            </div>

            <!-- Organizer Info -->
            <div class="px-6 py-4 border-b border-stone-200 dark:border-stone-800">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                    <div>
                        <p class="font-semibold text-stone-900 dark:text-white">@(Model.Organizer.BusinessName ?? "Business")</p>
                        <p class="text-sm text-stone-500 dark:text-stone-400">Organizer</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 px-4 py-2">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/dashboard">
                    <span class="material-symbols-outlined">dashboard</span> Dashboard
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/events">
                    <span class="material-symbols-outlined">event</span> My Events
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/bookings">
                    <span class="material-symbols-outlined">book_online</span> Bookings & Requests
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/services">
                    <span class="material-symbols-outlined">design_services</span> My Services
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg bg-primary/10 dark:bg-primary/20 text-primary font-bold" href="/organizer/messages">
                    <span class="material-symbols-outlined">mail</span> Messages
                    @if (Model.UnreadMessages > 0)
                    {
                        <span class="bg-red-500 text-white text-xs rounded-full px-2 py-1 ml-auto">@Model.UnreadMessages</span>
                    }
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/earnings">
                    <span class="material-symbols-outlined">payments</span> Earnings & Payouts
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/profile">
                    <span class="material-symbols-outlined">settings</span> My Profile
                </a>
            </nav>

            <!-- Logout Option -->
            <div class="p-4 border-t border-stone-200 dark:border-stone-800 mt-auto">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/home/index">
                    <span class="material-symbols-outlined">logout</span> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col min-w-0">
            <!-- Header -->
            <header class="flex h-16 items-center justify-between border-b border-stone-200 dark:border-stone-800 bg-white dark:bg-background-dark px-6 flex-shrink-0">
                <div class="flex items-center gap-4">
                    <h2 class="text-2xl font-bold text-stone-900 dark:text-white">Messages</h2>
                    <p class="text-stone-500 dark:text-stone-400">Communicate with clients</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-stone-500 dark:text-stone-400">search</span>
                        <input id="search-conversations" class="bg-background-light dark:bg-stone-800 border-none rounded-lg pl-10 pr-4 py-2 focus:ring-2 focus:ring-primary" placeholder="Search messages..." type="text" />
                    </div>
                    @await Html.PartialAsync("_OrganizerNotificationDropdown")
                    <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                </div>
            </header>

            <!-- Main Content - Fixed Height -->
            <div class="messages-main-wrapper bg-background-light dark:bg-background-dark">
                <!-- Messages Content -->
                <div class="messages-content-wrapper">
                    <!-- Conversations Panel -->
                    <div class="conversations-panel bg-white dark:bg-background-dark rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
                        <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex-shrink-0">
                            <h3 class="font-bold text-lg text-gray-900 dark:text-white">Conversations</h3>
                        </div>
                        <div id="conversations-list" class="conversations-list divide-y divide-gray-200 dark:divide-gray-700">
                            @if (Model.Conversations != null && Model.Conversations.Any())
                            {
                                @foreach (var conversation in Model.Conversations)
                                {
                                    var client = conversation.Client ?? conversation.Event?.Client;
                                    var clientName = client?.User != null ? $"{client.User.FirstName} {client.User.LastName}" : "Unknown Client";
                                    var lastMessage = conversation.Messages?.OrderByDescending(m => m.SentAt).FirstOrDefault();
                                    var unreadCount = conversation.Messages?.Count(m => !m.IsRead && m.Sender?.Role != "Organizer") ?? 0;

                                    <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-800/50 cursor-pointer conversation-item relative group"
                                         data-conversation-id="@conversation.ConversationID"
                                         data-client-name="@clientName"
                                         data-event-name="@(conversation.Event?.EventName ?? "")"
                                         data-event-date="@(conversation.Event?.EventDate.ToString("MMM dd, yyyy") ?? "")">

                                        <!-- Delete button -->
                                        <button class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10 w-6 h-6 flex items-center justify-center rounded-full bg-red-500 hover:bg-red-600 text-white delete-conversation-btn"
                                                data-conversation-id="@conversation.ConversationID"
                                                data-client-name="@clientName"
                                                title="Delete conversation"
                                                onclick="event.stopPropagation();">
                                            <span class="material-symbols-outlined text-sm">close</span>
                                        </button>

                                        <div class="flex gap-3">
                                            <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center shrink-0">
                                                <span class="material-symbols-outlined text-primary">person</span>
                                            </div>
                                            <div class="flex-1 min-w-0 pr-8">
                                                <p class="font-semibold text-gray-900 dark:text-white truncate mb-1">@clientName</p>
                                                <p class="text-sm text-gray-500 dark:text-gray-400 truncate">
                                                    @(lastMessage?.MessageText ?? "No messages")
                                                </p>
                                                <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
                                                    @((lastMessage?.SentAt ?? conversation.LastMessageAt).ToString("MMM dd"))
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="p-8 text-center">
                                    <div class="mb-4">
                                        <span class="material-symbols-outlined text-gray-400 text-5xl">forum</span>
                                    </div>
                                    <p class="text-gray-500 dark:text-gray-400 mb-2">No conversations yet</p>
                                    <p class="text-sm text-gray-400 dark:text-gray-500">Start a conversation with a client</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Chat Panel -->
                    <div class="chat-panel bg-white dark:bg-background-dark rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
                        <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex-shrink-0">
                            <div class="flex justify-between items-center">
                                <div>
                                    <h3 id="current-client-name" class="font-bold text-lg text-gray-900 dark:text-white">
                                        @if (Model.Conversations != null && Model.Conversations.Any())
                                        {
                                            var firstClient = Model.Conversations.FirstOrDefault()?.Client ?? Model.Conversations.FirstOrDefault()?.Event?.Client;
                                            @(firstClient?.User != null ? $"{firstClient.User.FirstName} {firstClient.User.LastName}" : "Select a conversation")
                                        }
                                        else
                                        {
                                            <text>Select a conversation</text>
                                        }
                                    </h3>
                                    <p id="current-event-info" class="text-sm text-gray-500 dark:text-gray-400">
                                        @if (Model.Conversations != null && Model.Conversations.Any())
                                        {
                                            var firstConv = Model.Conversations.FirstOrDefault();
                                            if (firstConv?.Event != null)
                                            {
                                                @($"{firstConv.Event.EventName} - {firstConv.Event.EventDate:MMM dd, yyyy}")
                                            }
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Messages Area (Scrollable) -->
                        <div class="messages-area space-y-4" id="message-container">
                            @if (Model.Messages != null && Model.Messages.Any())
                            {
                                @foreach (var message in Model.Messages)
                                {
                                    var isOrganizer = message.Sender?.Role == "Organizer";

                                    <div class="flex @(isOrganizer ? "justify-end" : "justify-start")">
                                        <div class="flex flex-col @(isOrganizer ? "items-end" : "items-start")" style="max-width: 70%;">
                                            <div class="@(isOrganizer ? "bg-primary text-white" : "bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white") rounded-lg p-3 break-words">
                                                <p class="whitespace-pre-wrap break-words">@message.MessageText</p>
                                            </div>
                                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">@message.SentAt.ToString("MMM dd, h:mm tt")</p>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-gray-500 dark:text-gray-400 py-12">
                                    <div class="mb-4">
                                        <span class="material-symbols-outlined text-gray-300 text-6xl">chat</span>
                                    </div>
                                    <p class="text-lg font-medium mb-2">No messages yet</p>
                                    <p class="text-sm">Select a conversation or start a new one</p>
                                </div>
                            }
                        </div>

                        <!-- Message Input (Fixed at bottom) -->
                        <div class="p-4 border-t border-gray-200 dark:border-gray-700 flex-shrink-0">
                            <div class="flex gap-2">
                                <input id="message-input" autocomplete="off" class="flex-1 bg-background-light dark:bg-gray-800 border-none rounded-lg px-4 py-2 focus:ring-2 focus:ring-primary" placeholder="Type your message..." type="text" />
                                <button id="send-message-btn" class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-all flex-shrink-0">
                                    <span class="material-symbols-outlined">send</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <script src="~/js/organizer-notifications.js"></script>
    <script>
        let currentConversationId = @(ViewBag.SelectedConversationId ?? 0);

        document.addEventListener('DOMContentLoaded', function() {
            if (currentConversationId === 0) {
                const firstConversation = document.querySelector('.conversation-item');
                if (firstConversation) {
                    currentConversationId = parseInt(firstConversation.dataset.conversationId);
                    firstConversation.classList.add('bg-gray-50', 'dark:bg-gray-800/50');

                    document.getElementById('current-client-name').textContent = firstConversation.dataset.clientName;
                    const eventName = firstConversation.dataset.eventName;
                    const eventDate = firstConversation.dataset.eventDate;
                    document.getElementById('current-event-info').textContent = eventName && eventDate ? `${eventName} - ${eventDate}` : '';

                    loadMessages(currentConversationId);
                }
            } else {
                const selectedConv = document.querySelector(`[data-conversation-id="${currentConversationId}"]`);
                if (selectedConv) {
                    selectedConv.classList.add('bg-gray-50', 'dark:bg-gray-800/50');
                }
            }

            updateInputState();

            // Search functionality
            const searchInput = document.getElementById('search-conversations');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    const conversations = document.querySelectorAll('.conversation-item');

                    conversations.forEach(conv => {
                        const text = conv.textContent.toLowerCase();
                        conv.style.display = text.includes(searchTerm) ? 'block' : 'none';
                    });
                });
            }

            // Conversation selection
            const conversationItems = document.querySelectorAll('.conversation-item');
            conversationItems.forEach(item => {
                item.addEventListener('click', function() {
                    conversationItems.forEach(i => i.classList.remove('bg-gray-50', 'dark:bg-gray-800/50'));
                    this.classList.add('bg-gray-50', 'dark:bg-gray-800/50');

                    currentConversationId = parseInt(this.dataset.conversationId);
                    const clientName = this.dataset.clientName;
                    const eventName = this.dataset.eventName;
                    const eventDate = this.dataset.eventDate;

                    document.getElementById('current-client-name').textContent = clientName;
                    document.getElementById('current-event-info').textContent = eventName && eventDate ? `${eventName} - ${eventDate}` : '';

                    updateInputState();
                    loadMessages(currentConversationId);
                });
            });

            // Message sending
            const messageInput = document.getElementById('message-input');
            const sendButton = document.getElementById('send-message-btn');

            if (messageInput && sendButton) {
                sendButton.addEventListener('click', sendMessage);

                messageInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
            }

            // Delete conversation functionality
            document.querySelectorAll('.delete-conversation-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const conversationId = this.dataset.conversationId;
                    const clientName = this.dataset.clientName;

                    if (confirm(`Are you sure you want to delete your conversation with ${clientName}? This action cannot be undone.`)) {
                        deleteConversation(conversationId);
                    }
                });
            });

            scrollToBottom();
        });

        function updateInputState() {
            const messageInput = document.getElementById('message-input');
            const sendButton = document.getElementById('send-message-btn');

            if (currentConversationId === 0) {
                messageInput.disabled = true;
                messageInput.placeholder = 'Select a conversation to start messaging...';
                sendButton.disabled = true;
                sendButton.classList.add('opacity-50', 'cursor-not-allowed');
            } else {
                messageInput.disabled = false;
                messageInput.placeholder = 'Type your message...';
                sendButton.disabled = false;
                sendButton.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        }

        function loadMessages(conversationId) {
            fetch(`/organizer/messages/conversation/${conversationId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayMessages(data.messages);
                    }
                })
                .catch(error => {
                    console.error('Error loading messages:', error);
                });
        }

        function displayMessages(messages) {
            const container = document.getElementById('message-container');
            container.innerHTML = '';

            if (!messages || messages.length === 0) {
                container.innerHTML = `
                    <div class="text-center text-gray-500 dark:text-gray-400 py-12">
                        <div class="mb-4">
                            <span class="material-symbols-outlined text-gray-300 text-6xl">chat</span>
                        </div>
                        <p class="text-lg font-medium mb-2">No messages yet</p>
                        <p class="text-sm">Start the conversation!</p>
                    </div>
                `;
                return;
            }

            messages.forEach(message => {
                const isOrganizer = message.senderRole === 'Organizer';
                const messageDiv = document.createElement('div');
                messageDiv.className = `flex ${isOrganizer ? 'justify-end' : 'justify-start'}`;

                messageDiv.innerHTML = `
                    <div class="flex flex-col ${isOrganizer ? 'items-end' : 'items-start'}" style="max-width: 70%;">
                        <div class="${isOrganizer ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white'} rounded-lg p-3">
                            <p class="whitespace-pre-wrap break-words">${escapeHtml(message.messageText)}</p>
                        </div>
                       <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">${formatDate(message.sentAt)}</p>
                    </div>
                `;

                container.appendChild(messageDiv);
            });

            scrollToBottom();
        }

        function sendMessage() {
            const messageInput = document.getElementById('message-input');
            const message = messageInput.value.trim();

            if (!message) {
                return;
            }

            if (!currentConversationId) {
                alert('Please select a conversation first');
                return;
            }

            messageInput.disabled = true;
            const sendButton = document.getElementById('send-message-btn');
            sendButton.disabled = true;

            fetch('/organizer/messages/send', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    conversationId: currentConversationId,
                    messageText: message
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    messageInput.value = '';
                    loadMessages(currentConversationId);
                } else {
                    alert('Failed to send message: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error sending message:', error);
                alert('Error sending message');
            })
            .finally(() => {
                messageInput.disabled = false;
                sendButton.disabled = false;
                messageInput.focus();
            });
        }

        function deleteConversation(conversationId) {
            fetch(`/organizer/messages/delete/${conversationId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const conversationItem = document.querySelector(`.conversation-item[data-conversation-id="${conversationId}"]`);
                    if (conversationItem) {
                        conversationItem.remove();
                    }

                    if (currentConversationId === parseInt(conversationId)) {
                        currentConversationId = 0;
                        document.getElementById('current-client-name').textContent = 'Select a conversation';
                        document.getElementById('current-event-info').textContent = '';
                        document.getElementById('message-container').innerHTML = `
                            <div class="text-center text-gray-500 dark:text-gray-400 py-12">
                                <div class="mb-4">
                                    <span class="material-symbols-outlined text-gray-300 text-6xl">chat</span>
                                </div>
                                <p class="text-lg font-medium mb-2">No messages yet</p>
                                <p class="text-sm">Select a conversation or start a new one</p>
                            </div>
                        `;
                        updateInputState();

                        const firstConversation = document.querySelector('.conversation-item');
                        if (firstConversation) {
                            firstConversation.click();
                        }
                    }

                    const remainingConversations = document.querySelectorAll('.conversation-item');
                    if (remainingConversations.length === 0) {
                        document.getElementById('conversations-list').innerHTML = `
                            <div class="p-8 text-center">
                                <div class="mb-4">
                                    <span class="material-symbols-outlined text-gray-400 text-5xl">forum</span>
                                </div>
                                <p class="text-gray-500 dark:text-gray-400 mb-2">No conversations yet</p>
                                <p class="text-sm text-gray-400 dark:text-gray-500">Start a conversation with a client</p>
                            </div>
                        `;
                    }

                    alert('Conversation deleted successfully');
                } else {
                    alert('Failed to delete conversation: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error deleting conversation:', error);
                alert('Error deleting conversation: ' + error.message);
            });
        }

        function scrollToBottom() {
            const container = document.getElementById('message-container');
            if (container) {
                container.scrollTop = container.scrollHeight;
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
