@model Lumera.Models.Event

@{
    ViewData["Title"] = "Edit Event Status - LUMERA";
    Layout = null;
    var statusOptions = ViewBag.StatusOptions as List<string> ?? new List<string> { "Pending", "Confirmed", "Cancelled", "Completed" };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13a4ec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                    },
                    fontFamily: {
                        "display": ["Manrope"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-stone-800 dark:text-stone-200">
    <div class="flex h-screen overflow-hidden">
        <!-- Unified Sidebar -->
        <aside class="w-64 bg-white dark:bg-background-dark flex flex-col border-r border-stone-200 dark:border-stone-800 fixed left-0 top-0 h-screen z-30">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-primary p-2 rounded-lg">
                    <span class="material-symbols-outlined text-white">event</span>
                </div>
                <h1 class="text-xl font-bold text-stone-900 dark:text-white">LUMERA</h1>
            </div>

            <!-- Organizer Info -->
            <div class="px-6 py-4 border-b border-stone-200 dark:border-stone-800">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                    <div>
                        <p class="font-semibold text-stone-900 dark:text-white">@(ViewBag.OrganizerName ?? "Organizer")</p>
                        <p class="text-sm text-stone-500 dark:text-stone-400">Organizer</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 px-4 py-2">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/dashboard">
                    <span class="material-symbols-outlined">dashboard</span> Dashboard
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg bg-primary/10 dark:bg-primary/20 text-primary font-bold" href="/organizer/events">
                    <span class="material-symbols-outlined">event</span> My Events
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/bookings">
                    <span class="material-symbols-outlined">book_online</span> Bookings & Requests
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/services">
                    <span class="material-symbols-outlined">design_services</span> My Services
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/messages">
                    <span class="material-symbols-outlined">mail</span> Messages
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/earnings">
                    <span class="material-symbols-outlined">payments</span> Earnings & Payouts
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/profile">
                    <span class="material-symbols-outlined">settings</span> My Profile
                </a>
            </nav>

            <!-- Logout Option -->
            <div class="p-4 border-t border-stone-200 dark:border-stone-800 mt-auto">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" asp-controller="Home" asp-action="Index">
                    <span class="material-symbols-outlined">logout</span> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col ml-64">
            <!-- Header -->
            <header class="flex h-16 items-center justify-between border-b border-stone-200 dark:border-stone-800 bg-white dark:bg-background-dark px-6 fixed top-0 right-0 left-64 z-20">
                <div class="flex items-center gap-4">
                    <a href="/organizer/events" class="p-2 hover:bg-primary/10 dark:hover:bg-primary/20 rounded-lg">
                        <span class="material-symbols-outlined text-stone-600 dark:text-stone-300">arrow_back</span>
                    </a>
                    <h2 class="text-2xl font-bold text-stone-900 dark:text-white">Edit Event Status</h2>
                </div>
                <div class="flex items-center gap-4">
                    @await Html.PartialAsync("_OrganizerNotificationDropdown")
                    <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 p-8 bg-background-light dark:bg-background-dark overflow-y-auto mt-16">
                <div class="max-w-6xl mx-auto space-y-6">
                    <!-- Status Update Card -->
                    <div class="bg-white dark:bg-background-dark rounded-lg shadow-md p-8">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Event Name</label>
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">@Model.EventName</h2>
                        <div class="space-y-6">
                            <!-- Current Status Display -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Current Status</label>
                                @{
                                    string currentStatusLower = (Model.Status ?? "").ToLower();
                                    var currentStatusClass = currentStatusLower switch
                                    {
                                        "confirmed" => "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
                                        "pending" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400",
                                        "cancelled" => "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400",
                                        "completed" => "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400",
                                        _ => "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400"
                                    };
                                }
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium @currentStatusClass">
                                    @Model.Status
                                </span>
                            </div>

                            <!-- New Status Selection -->
                            <div>
                                <label for="status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                    Select New Status
                                </label>
                                <select id="status"
                                        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-stone-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                                    @foreach (var status in statusOptions)
                                    {
                                        <option value="@status" selected="@(status == Model.Status)">@status</option>
                                    }
                                </select>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex justify-between gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                                <button onclick="deleteEvent()"
                                        class="px-6 py-3 border border-red-300 dark:border-red-600 text-red-700 dark:text-red-400 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 font-medium transition-all flex items-center gap-2">
                                    <span class="material-symbols-outlined text-sm">delete</span>
                                    Delete Event
                                </button>
                                <div class="flex gap-4">
                                    <a href="/organizer/events"
                                       class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-stone-800 font-medium transition-all">
                                        Cancel
                                    </a>
                                    <button onclick="updateStatus()"
                                            class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 font-medium shadow-md transition-all flex items-center gap-2">
                                        <span class="material-symbols-outlined text-sm">check_circle</span>
                                        Update Status
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status Guide Card -->
                    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6">
                        <div class="flex items-start gap-3">
                            <div class="p-2 bg-blue-100 dark:bg-blue-900/40 rounded-lg">
                                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">info</span>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-semibold text-blue-900 dark:text-blue-300 mb-3">Status Guide</h4>
                                <ul class="text-sm text-blue-800 dark:text-blue-400 space-y-2">
                                    <li class="flex items-start gap-2">
                                        <span class="material-symbols-outlined text-xs mt-0.5">arrow_right</span>
                                        <span><strong>Pending:</strong> Initial status when client books your service</span>
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="material-symbols-outlined text-xs mt-0.5">arrow_right</span>
                                        <span><strong>Confirmed:</strong> You have accepted the booking</span>
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="material-symbols-outlined text-xs mt-0.5">arrow_right</span>
                                        <span><strong>Cancelled:</strong> The event has been cancelled</span>
                                    </li>
                                    <li class="flex items-start gap-2">
                                        <span class="material-symbols-outlined text-xs mt-0.5">arrow_right</span>
                                        <span><strong>Completed:</strong> The event has been successfully completed</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="~/js/organizer-notifications.js"></script>
    <script>
        async function updateStatus() {
            const status = document.getElementById('status').value;
            const eventId = @Model.EventID;

            try {
                const response = await fetch(`/organizer/events/edit/${eventId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: status })
                });

                const result = await response.json();

                if (result.success) {
                    window.location.href = '/organizer/events';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while updating the status');
            }
        }

        async function deleteEvent() {
            const eventId = @Model.EventID;

            if (!confirm('Are you sure you want to delete this event? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch(`/organizer/events/delete/${eventId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    alert('Event deleted successfully!');
                    window.location.href = '/organizer/events';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the event');
            }
        }
    </script>
</body>
</html>