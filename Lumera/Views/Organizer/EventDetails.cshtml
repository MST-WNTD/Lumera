@model Lumera.Models.Event

@{
    ViewData["Title"] = "Event Details - LUMERA";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13a4ec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                    },
                    fontFamily: {
                        "display": ["Manrope"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-stone-800 dark:text-stone-200">
    <div class="flex min-h-screen">
        <!-- Unified Sidebar -->
        <aside class="w-64 bg-white dark:bg-background-dark flex flex-col border-r border-stone-200 dark:border-stone-800 fixed left-0 top-0 h-screen z-30">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-primary p-2 rounded-lg">
                    <span class="material-symbols-outlined text-white">event</span>
                </div>
                <h1 class="text-xl font-bold text-stone-900 dark:text-white">LUMERA</h1>
            </div>

            <!-- Organizer Info -->
            <div class="px-6 py-4 border-b border-stone-200 dark:border-stone-800">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                    <div>
                        <p class="font-semibold text-stone-900 dark:text-white">@(ViewBag.OrganizerName ?? "Organizer")</p>
                        <p class="text-sm text-stone-500 dark:text-stone-400">Organizer</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 px-4 py-2">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/dashboard">
                    <span class="material-symbols-outlined">dashboard</span> Dashboard
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg bg-primary/10 dark:bg-primary/20 text-primary font-bold" href="/organizer/events">
                    <span class="material-symbols-outlined">event</span> My Events
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/bookings">
                    <span class="material-symbols-outlined">book_online</span> Bookings & Requests
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/services">
                    <span class="material-symbols-outlined">design_services</span> My Services
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/messages">
                    <span class="material-symbols-outlined">mail</span> Messages
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/earnings">
                    <span class="material-symbols-outlined">payments</span> Earnings & Payouts
                </a>
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" href="/organizer/profile">
                    <span class="material-symbols-outlined">settings</span> My Profile
                </a>
            </nav>

            <!-- Logout Option -->
            <div class="p-4 border-t border-stone-200 dark:border-stone-800 mt-auto">
                <a class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 text-stone-600 dark:text-stone-300" asp-controller="Home" asp-action="Index">
                    <span class="material-symbols-outlined">logout</span> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col ml-64">
            <!-- Header -->
            <header class="flex h-16 items-center justify-between border-b border-stone-200 dark:border-stone-800 bg-white dark:bg-background-dark px-6 fixed top-0 right-0 left-64 z-20">
                <div class="flex items-center gap-4">
                    <a href="/organizer/events" class="p-2 hover:bg-primary/10 dark:hover:bg-primary/20 rounded-lg">
                        <span class="material-symbols-outlined text-stone-600 dark:text-stone-300">arrow_back</span>
                    </a>
                    <h2 class="text-2xl font-bold text-stone-900 dark:text-white">Event Details</h2>
                </div>
                <div class="flex items-center gap-4">
                    @await Html.PartialAsync("_OrganizerNotificationDropdown")
                    <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary">business</span>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <main class="flex-1 p-8 bg-background-light dark:bg-background-dark overflow-y-auto mt-16">
                <div class="max-w-6xl mx-auto space-y-6">
                    <!-- Event Information Card -->
                    <div class="bg-white dark:bg-background-dark rounded-lg shadow-md p-8">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">@Model.EventName</h1>
                                <div class="flex items-center gap-2">
                                    <span class="px-3 py-1 rounded-full text-sm font-medium
                                        @(Model.Status == "Confirmed" ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400" :
                                                                                    Model.Status == "Planning" ? "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400" :
                                                                                    Model.Status == "Completed" ? "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400" :
                                                                                    Model.Status == "Cancelled" ? "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400" :
                                                                                    "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400")">
                                        @Model.Status
                                    </span>
                                    <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm font-medium">
                                        @Model.EventType
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <!-- Date -->
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-primary/10 rounded-lg">
                                    <span class="material-symbols-outlined text-primary">calendar_today</span>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Event Date</p>
                                    <p class="text-lg font-semibold text-gray-900 dark:text-white">@Model.EventDate.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-primary/10 rounded-lg">
                                    <span class="material-symbols-outlined text-primary">location_on</span>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Location</p>
                                    <p class="text-lg font-semibold text-gray-900 dark:text-white">@(Model.Location ?? "Not specified")</p>
                                </div>
                            </div>

                            <!-- Budget -->
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-primary/10 rounded-lg">
                                    <span class="material-symbols-outlined text-primary">payments</span>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Budget</p>
                                    <p class="text-lg font-semibold text-gray-900 dark:text-white">@(Model.Budget.HasValue ? $"₱{Model.Budget.Value:N2}" : "Not set")</p>
                                </div>
                            </div>

                            <!-- Guest Count -->
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-primary/10 rounded-lg">
                                    <span class="material-symbols-outlined text-primary">groups</span>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Expected Guests</p>
                                    <p class="text-lg font-semibold text-gray-900 dark:text-white">@(Model.GuestCount?.ToString() ?? "Not specified")</p>
                                </div>
                            </div>

                            <!-- Client -->
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-primary/10 rounded-lg">
                                    <span class="material-symbols-outlined text-primary">person</span>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Client</p>
                                    @if (Model.Client?.User != null)
                                    {
                                        <p class="text-lg font-semibold text-gray-900 dark:text-white">@Model.Client.User.FirstName @Model.Client.User.LastName</p>
                                        @if (!string.IsNullOrEmpty(Model.Client.User.Email))
                                        {
                                            <p class="text-xs text-gray-600 dark:text-gray-400">@Model.Client.User.Email</p>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Client.User.Phone))
                                        {
                                            <p class="text-xs text-gray-600 dark:text-gray-400">@Model.Client.User.Phone</p>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-lg font-semibold text-gray-900 dark:text-white">Not available</p>
                                    }
                                </div>
                            </div>

                            <!-- Created Date -->
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-primary/10 rounded-lg">
                                    <span class="material-symbols-outlined text-primary">schedule</span>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Created</p>
                                    <p class="text-lg font-semibold text-gray-900 dark:text-white">@Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.EventDescription))
                        {
                            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Description</h3>
                                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">@Model.EventDescription</p>
                            </div>
                        }
                    </div>

                    <!-- Bookings Section -->
                    <div class="bg-white dark:bg-background-dark rounded-lg shadow-md p-8">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Related Bookings</h2>
                        </div>

                        @if (Model.Bookings != null && Model.Bookings.Any())
                        {
                            <div class="space-y-4">
                                @foreach (var booking in Model.Bookings)
                                {
                                    <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:border-primary transition-colors">
                                        <div class="flex justify-between items-start">
                                            <div class="flex-1">
                                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                                                    Booking #@booking.BookingID
                                                </h3>
                                                <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                                                    @booking.ProviderType Provider
                                                </p>
                                                <div class="flex items-center gap-4 text-sm">
                                                    <span class="flex items-center gap-1 text-gray-600 dark:text-gray-300">
                                                        <span class="material-symbols-outlined text-sm">calendar_today</span>
                                                        @booking.EventDate.ToString("MMM dd, yyyy")
                                                    </span>
                                                    <span class="flex items-center gap-1 text-gray-600 dark:text-gray-300">
                                                        <span class="material-symbols-outlined text-sm">payments</span>
                                                        ₱@((booking.FinalAmount ?? booking.QuoteAmount ?? 0).ToString("N2"))
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex flex-col items-end gap-2">
                                                <span class="px-3 py-1 rounded-full text-xs font-medium
                                                            @(booking.Status == "Confirmed" ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400" :
                                                                                                            booking.Status == "Pending" ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400" :
                                                                                                            booking.Status == "Completed" ? "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400" :
                                                                                                            "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400")">
                                            @booking.Status
                                        </span>
                                        <a href="/organizer/bookings/details/@booking.BookingID" class="text-primary hover:underline text-sm font-medium">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                                                        }
                            </div>

                            <!-- Booking Summary -->
                            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <p class="text-sm text-gray-500 dark:text-gray-400">Total Services Booked</p>
                                        <p class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Bookings.Count</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-sm text-gray-500 dark:text-gray-400">Total Estimated Cost</p>
                                        <p class="text-2xl font-bold text-primary">
                                            ₱@Model.Bookings.Sum(b => b.FinalAmount ?? b.QuoteAmount ?? 0).ToString("N2")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-12">
                                <span class="material-symbols-outlined text-gray-300 dark:text-gray-600 text-6xl mb-4">book_online</span>
                                <p class="text-gray-500 dark:text-gray-400 mb-4">No bookings yet for this event</p>
                            </div>
                        }
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-white dark:bg-background-dark rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Actions</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <a href="/organizer/events/edit/@Model.EventID" class="flex items-center gap-3 p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors group">
                                <span class="material-symbols-outlined text-gray-600 dark:text-gray-400 group-hover:text-primary">edit</span>
                                <div>
                                    <p class="font-medium text-gray-900 dark:text-white">Edit Status</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Update event status</p>
                                </div>
                            </a>
                            <a href="/organizer/bookings" class="flex items-center gap-3 p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors group">
                                <span class="material-symbols-outlined text-gray-600 dark:text-gray-400 group-hover:text-primary">book_online</span>
                                <div>
                                    <p class="font-medium text-gray-900 dark:text-white">View Bookings</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Manage bookings</p>
                                </div>
                            </a>
                            <a href="/organizer/messages" class="flex items-center gap-3 p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors group">
                                <span class="material-symbols-outlined text-gray-600 dark:text-gray-400 group-hover:text-primary">mail</span>
                                <div>
                                    <p class="font-medium text-gray-900 dark:text-white">Messages</p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">Contact client</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="~/js/organizer-notifications.js"></script>
</body>
</html>