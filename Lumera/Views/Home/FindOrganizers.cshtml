@model Lumera.Models.OrganizerListViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Organizers - LUMERA</title>
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/landpage.css" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Organizers Page Specific Styles */
        .organizers-hero {
            position: relative;
            width: 100%;
            height: 500px;
            margin-top: 5vh;
            border-radius: 0 0 120px 120px;
            overflow: hidden;
        }

        .organizers-hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #315375 0%, #1e3a5f 100%);
            border-radius: 0 0 120px 120px;
        }

        .organizers-hero-content {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
            padding: 0 20px;
        }

        .organizers-hero-title {
            color: #eef2f5;
            font-size: 56px;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 24px;
            max-width: 800px;
        }

        .organizers-hero-subtitle {
            color: #eef2f5;
            font-size: 20px;
            font-weight: 400;
            line-height: 1.55;
            margin-bottom: 40px;
            max-width: 600px;
        }

        .search-container {
            max-width: 800px;
            width: 100%;
            margin: 0 auto;
            position: relative;
        }

        .search-box {
            display: flex;
            background: white;
            border-radius: 50px;
            padding: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .search-input {
            flex: 1;
            border: none;
            padding: 15px 20px;
            font-size: 16px;
            border-radius: 50px;
            outline: none;
        }

        .search-btn {
            background: #30373d;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .search-btn:hover {
            background: #1e252b;
        }

        .filter-section {
            padding: 40px 0;
            background: #f8f9fa;
        }

        .filter-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .filter-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #315375;
        }

        .filter-options {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .filter-option {
            background: white;
            padding: 10px 20px;
            border-radius: 25px;
            border: 1px solid #ddd;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .filter-option.active {
            background: #315375;
            color: white;
            border-color: #315375;
        }

        .organizers-grid {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
        }

        .organizer-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .organizer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .organizer-image {
            height: 200px;
            background: #eef2f5;
            background-size: cover;
            background-position: center;
        }

        .organizer-info {
            padding: 20px;
        }

        .organizer-name {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 10px;
            color: #315375;
        }

        .organizer-location {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 10px;
            color: #666;
            font-size: 14px;
        }

        .organizer-specialty {
            background: #eef2f5;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 12px;
            display: inline-block;
            margin-bottom: 15px;
            color: #315375;
        }

        .organizer-rating {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 10px;
        }

        .organizer-reviews {
            font-size: 14px;
            color: #666;
        }

        .organizer-description {
            font-size: 14px;
            color: #555;
            line-height: 1.5;
            margin-bottom: 15px;
        }

        .organizer-actions {
            display: flex;
            justify-content: space-between;
        }

        .view-profile-btn {
            background: #315375;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .view-profile-btn:hover {
            background: #1e3a5f;
        }

        .contact-btn {
            background: transparent;
            color: #315375;
            border: 1px solid #315375;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .contact-btn:hover {
            background: #315375;
            color: white;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin: 40px 0;
            gap: 10px;
        }

        .page-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: white;
            border: 1px solid #ddd;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .page-btn.active {
            background: #315375;
            color: white;
            border-color: #315375;
        }

        .page-btn:hover:not(.active) {
            background: #f0f0f0;
        }
    </style>
</head>
<body>
 
    <!-- Hero Section -->
    <section class="organizers-hero">
        <div class="organizers-hero-background"></div>
        <div class="organizers-hero-content">
            <h1 class="organizers-hero-title">Find the Perfect Event Organizer</h1>
            <p class="organizers-hero-subtitle">Connect with experienced professionals to bring your vision to life</p>
            <div class="search-container">
                <div class="search-box">
                    <input type="text" class="search-input" placeholder="Search by name, location, or specialty...">
                    <button class="search-btn">Search</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Filter Section -->
    <section class="filter-section">
        <div class="filter-container">
            <h3 class="filter-title">Filter by Specialty</h3>
            <div class="filter-options">
                <div class="filter-option active">All</div>
                <div class="filter-option">Weddings</div>
                <div class="filter-option">Corporate Events</div>
                <div class="filter-option">Birthdays</div>
                <div class="filter-option">Conferences</div>
                <div class="filter-option">Parties</div>
                <div class="filter-option">Fundraisers</div>
            </div>
        </div>
    </section>

    <!-- Organizers Grid -->
    <section class="organizers-grid-section">
        <div class="organizers-grid">
            @foreach (var organizer in Model.Organizers)
            {
                <div class="organizer-card">
                    <div class="organizer-image" style="background-image: url('@organizer.ImageURL')"></div>
                    <div class="organizer-info">
                        <h3 class="organizer-name">@organizer.BusinessName</h3>
                        <div class="organizer-location">
                            <span>üìç</span> @organizer.Location
                        </div>
                        <div class="organizer-specialty">@organizer.Specialty</div>
                        <div class="organizer-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="star @(i <= Math.Round(organizer.AverageRating) ? "filled" : "")">‚òÖ</span>
                            }
                            <span>@organizer.AverageRating.ToString("0.0")</span>
                        </div>
                        <div class="organizer-reviews">(@organizer.TotalReviews reviews)</div>
                        <p class="organizer-description">@(string.IsNullOrEmpty(organizer.BusinessDescription) ? "Professional event planning services." : organizer.BusinessDescription.Length > 100 ? organizer.BusinessDescription.Substring(0, 100) + "..." : organizer.BusinessDescription)</p>
                        <div class="organizer-actions">
                            <button class="view-profile-btn" onclick="viewProfile(@organizer.OrganizerID)">View Profile</button>
                            <button class="contact-btn" onclick="contactOrganizer(@organizer.OrganizerID)">Contact</button>
                        </div>
                    </div>
                </div>
            }

            @if (!Model.Organizers.Any())
            {
                <div class="no-results">
                    <h3>No organizers found</h3>
                    <p>Try adjusting your search criteria or filters.</p>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <div class="page-btn @(i == Model.CurrentPage ? "active" : "")" onclick="goToPage(@i)">@i</div>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <div class="page-btn" onclick="goToPage(@(Model.CurrentPage + 1))">></div>
                }
            </div>
        }
    </section>

    <script>
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const filterOptions = document.querySelectorAll('.filter-option');
            const searchInput = document.querySelector('.search-input');
            const searchBtn = document.querySelector('.search-btn');

            filterOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all options
                    filterOptions.forEach(opt => opt.classList.remove('active'));

                    // Add active class to clicked option
                    this.classList.add('active');

                    // Apply filter
                    applyFilters();
                });
            });

            // Search functionality
            searchBtn.addEventListener('click', function() {
                performSearch();
            });

            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });

            function performSearch() {
                applyFilters();
            }

            function applyFilters() {
                const searchQuery = searchInput.value.trim();
                const selectedSpecialty = document.querySelector('.filter-option.active').textContent;

                // Build URL with parameters
                let url = '/Organizer/FindOrganizers?';
                if (searchQuery) {
                    url += `search=${encodeURIComponent(searchQuery)}&`;
                }
                if (selectedSpecialty && selectedSpecialty !== 'All') {
                    url += `specialty=${encodeURIComponent(selectedSpecialty)}&`;
                }

                // Remove trailing & and navigate
                window.location.href = url.replace(/&$/, '');
            }
        });

        // Pagination function
        function goToPage(page) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('page', page);
            window.location.href = `${window.location.pathname}?${urlParams.toString()}`;
        }

        // Organizer actions
        function viewProfile(organizerId) {
            window.location.href = `/Organizer/Profile/${organizerId}`;
        }

        function contactOrganizer(organizerId) {
            // Implement contact functionality
            alert('Contact feature coming soon for organizer: ' + organizerId);
        }
    </script>
</body>
</html>