<body>

    <!-- Hero Section -->
    <section class="services-hero">
        <div class="services-hero-background"></div>
        <div class="services-hero-content">
            <h1 class="services-hero-title">Browse Event Services</h1>
            <p class="services-hero-subtitle">Find trusted suppliers for catering, photography, venues, and more</p>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories-section">
        <div class="categories-container">
            <h2 class="categories-title">Service Categories</h2>
            <div class="categories-grid">
                <div class="category-card" data-category="all">
                    <div class="category-icon catering-icon"></div>
                    <h3>All Services</h3>
                    <p>Browse all available services</p>
                </div>
                @foreach (var category in Model.Categories)
                {
                    <div class="category-card" data-category="@category.ToLower()">
                        <div class="category-icon @(category.ToLower())-icon"></div>
                        <h3>@category</h3>
                        <p>@GetCategoryDescription(category)</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section">
        <div class="services-container">
            <h2 class="services-title">Popular Services</h2>

            <!-- Filters -->
            <div class="services-filters">
                <div class="search-box">
                    <input type="text" id="searchInput" placeholder="Search services..." value="@Model.SearchQuery">
                </div>
                <div class="category-filters">
                    <button class="category-filter-btn @(string.IsNullOrEmpty(Model.SelectedCategory) ? "active" : "")" data-category="all">All</button>
                    @foreach (var category in Model.Categories)
                    {
                        <button class="category-filter-btn @(Model.SelectedCategory == category ? "active" : "")" data-category="@category">@category</button>
                    }
                </div>
            </div>

            <!-- Services Grid -->
            <div class="services-grid">
                @if (Model.Services.Any())
                {
                    @foreach (var service in Model.Services)
                    {
                        <div class="service-card">
                            <div class="service-image" style="background-image: url('@service.ImageURL')"></div>
                            <div class="service-info">
                                <h3 class="service-name">@service.ServiceName</h3>
                                <div class="service-category">@service.Category</div>
                                <div class="service-location">
                                    <span>üìç</span> @(service.Location ?? "Metro Manila")
                                </div>
                                <div class="service-rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="star @(i <= service.AverageRating ? "filled" : "")">‚òÖ</span>
                                    }
                                    <span>@service.AverageRating.ToString("0.0")</span>
                                </div>
                                <div class="service-reviews">(@service.TotalReviews reviews)</div>
                                <p class="service-description">@(service.ServiceDescription?.Length > 100 ? service.ServiceDescription.Substring(0, 100) + "..." : service.ServiceDescription)</p>
                                <div class="service-price">Starting at ‚Ç±@service.BasePrice?.ToString("N0")</div>
                                <div class="service-actions">
                                    <button class="view-details-btn" onclick="viewServiceDetails(@service.ServiceID)">View Details</button>
                                    <button class="contact-btn" onclick="contactService(@service.ServiceID)">Contact</button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-services">
                        <h3>No services found</h3>
                        <p>Try adjusting your search or filter criteria.</p>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="pagination">
                    <button class="pagination-btn" onclick="changePage(@(Model.CurrentPage - 1))" @(Model.CurrentPage <= 1 ? "disabled" : "")>Previous</button>
                    <span class="pagination-info">Page @Model.CurrentPage of @Model.TotalPages</span>
                    <button class="pagination-btn" onclick="changePage(@(Model.CurrentPage + 1))" @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")>Next</button>
                </div>
            }

            <div class="load-more">
                <button class="load-more-btn" onclick="loadMoreServices()">Load More Services</button>
            </div>
        </div>
    </section>

    <script>
        // Category selection functionality
        document.addEventListener('DOMContentLoaded', function() {
            const categoryCards = document.querySelectorAll('.category-card');
            const categoryFilterBtns = document.querySelectorAll('.category-filter-btn');

            categoryCards.forEach(card => {
                card.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    filterServices(category);
                });
            });

            categoryFilterBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    filterServices(category);
                });
            });

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            let searchTimeout;

            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    filterServices('@Model.SelectedCategory', this.value);
                }, 500);
            });
        });

        function filterServices(category = 'all', search = '') {
            const url = new URL(window.location.href);

            if (category !== 'all') {
                url.searchParams.set('category', category);
            } else {
                url.searchParams.delete('category');
            }

            if (search) {
                url.searchParams.set('search', search);
            } else {
                url.searchParams.delete('search');
            }

            url.searchParams.delete('page'); // Reset to page 1 when filtering

            window.location.href = url.toString();
        }

        function changePage(page) {
            const url = new URL(window.location.href);
            url.searchParams.set('page', page);
            window.location.href = url.toString();
        }

        function viewServiceDetails(serviceId) {
            window.location.href = '@Url.Action("ServiceDetails", "Services")' + '?id=' + serviceId;
        }

        function contactService(serviceId) {
            // Simple contact implementation - in a real app, this would open a modal or chat
            const message = prompt('Enter your message for this service provider:');
            if (message) {
                fetch('@Url.Action("ContactService", "Services")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        serviceId: serviceId,
                        message: message
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Message sent successfully!');
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while sending your message.');
                });
            }
        }

        function loadMoreServices() {
            const currentPage = @Model.CurrentPage;
            changePage(currentPage + 1);
        }
    </script>
</body>
</html>
@functions {
    private string GetCategoryDescription(string category)
    {
        var descriptions = new Dictionary<string, string>
        {
            { "Catering", "Food and beverage services" },
            { "Photography", "Professional event photography" },
            { "Videography", "Event video recording" },
            { "Venue", "Event spaces and locations" },
            { "Decoration", "Event styling and decor" },
            { "Entertainment", "Performers and activities" },
            { "Florist", "Flower arrangements" },
            { "Transportation", "Guest transport services" },
            { "Audio Visual", "Sound and lighting systems" }
        };

        return descriptions.ContainsKey(category) ? descriptions[category] : "Professional event services";
    }
