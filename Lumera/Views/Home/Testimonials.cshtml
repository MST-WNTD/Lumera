@model Lumera.Controllers.TestimonialsViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testimonials - LUMERA</title>
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/landpage.css" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Testimonials Page Specific Styles */
        .testimonials-hero {
            position: relative;
            width: 100%;
            height: 500px;
            margin-top: 5vh;
            border-radius: 0 0 120px 120px;
            overflow: hidden;
        }

        .testimonials-hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #315375 0%, #1e3a5f 100%);
            border-radius: 0 0 120px 120px;
        }

        .testimonials-hero-content {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
            padding: 0 20px;
        }

        .testimonials-hero-title {
            color: #eef2f5;
            font-size: 56px;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 24px;
            max-width: 800px;
        }

        .testimonials-hero-subtitle {
            color: #eef2f5;
            font-size: 20px;
            font-weight: 400;
            line-height: 1.55;
            margin-bottom: 40px;
            max-width: 600px;
        }

        .testimonials-section {
            padding: 80px 0;
        }

        .testimonials-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .testimonials-title {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 60px;
            color: #315375;
        }

        .testimonials-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }

        .testimonial-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .testimonial-content {
            font-size: 16px;
            line-height: 1.6;
            color: #555;
            margin-bottom: 20px;
            position: relative;
        }

        .testimonial-content:before {
            content: """;
            font-size: 60px;
            color: #315375;
            opacity: 0.2;
            position: absolute;
            top: -20px;
            left: -10px;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
        }

        .author-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #eef2f5;
            margin-right: 15px;
            background-size: cover;
            background-position: center;
        }

        .author-info h4 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
            color: #315375;
        }

        .author-info p {
            font-size: 14px;
            color: #666;
        }

        .testimonial-rating {
            display: flex;
            margin-bottom: 15px;
        }

        .star {
            color: #ffc107;
            margin-right: 2px;
        }

        .video-testimonials {
            background: #f8f9fa;
            padding: 80px 0;
        }

        .video-testimonials-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .video-testimonials-title {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 60px;
            color: #315375;
        }

        .video-testimonials-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
            gap: 30px;
        }

        .video-testimonial-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .video-placeholder {
            height: 280px;
            background: #315375;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
        }

        .video-testimonial-info {
            padding: 20px;
        }

        .video-testimonial-author {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .video-author-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #eef2f5;
            margin-right: 15px;
            background-size: cover;
            background-position: center;
        }

        .video-author-info h4 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
            color: #315375;
        }

        .video-author-info p {
            font-size: 14px;
            color: #666;
        }

        .video-testimonial-content {
            font-size: 16px;
            line-height: 1.6;
            color: #555;
        }

        .stats-section {
            padding: 80px 0;
        }

        .stats-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .stats-title {
            font-size: 36px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 60px;
            color: #315375;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
        }

        .stat-card {
            text-align: center;
            padding: 30px;
        }

        .stat-number {
            font-size: 48px;
            font-weight: 700;
            color: #315375;
            margin-bottom: 10px;
        }

        .stat-label {
            font-size: 18px;
            color: #666;
        }

        .cta-section {
            background: #315375;
            padding: 80px 0;
            text-align: center;
            color: white;
            margin-bottom:30vh;
        }

        .cta-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .cta-title {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .cta-description {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 30px;
            opacity: 0.9;
        }

        .cta-button {
            background: white;
            color: #315375;
            border: none;
            padding: 15px 30px;
            border-radius: 5px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .cta-button:hover {
            background: #eef2f5;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>


    <!-- Hero Section -->
    <section class="testimonials-hero">
        <div class="testimonials-hero-background"></div>
        <div class="testimonials-hero-content">
            <h1 class="testimonials-hero-title">What Our Clients Say</h1>
            <p class="testimonials-hero-subtitle">Real stories from people who planned their perfect events with LUMERA</p>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section">
        <div class="testimonials-container">
            <h2 class="testimonials-title">Client Testimonials</h2>
            <div class="testimonials-grid">
                @foreach (var testimonial in Model.Testimonials)
                {
                    <div class="testimonial-card">
                        <div class="testimonial-rating">
                            @for (int i = 0; i < 5; i++)
                            {
                                <span class="star">@(i < testimonial.Rating ? "★" : "☆")</span>
                            }
                        </div>
                        <div class="testimonial-content">
                            @testimonial.Content
                        </div>
                        <div class="testimonial-author">
                            <div class="author-avatar" style="background-image: url('@testimonial.AuthorAvatar')"></div>
                            <div class="author-info">
                                <h4>@testimonial.AuthorName</h4>
                                <p>@testimonial.AuthorRole</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Video Testimonials Section -->
    <section class="video-testimonials">
        <div class="video-testimonials-container">
            <h2 class="video-testimonials-title">Video Testimonials</h2>
            <div class="video-testimonials-grid">
                @foreach (var video in Model.VideoTestimonials)
                {
                    <div class="video-testimonial-card">
                        <div class="video-placeholder">
                            <div>Video Testimonial - @video.Title</div>
                        </div>
                        <div class="video-testimonial-info">
                            <div class="video-testimonial-author">
                                <div class="video-author-avatar" style="background-image: url('@video.AuthorAvatar')"></div>
                                <div class="video-author-info">
                                    <h4>@video.AuthorName</h4>
                                    <p>@video.AuthorRole</p>
                                </div>
                            </div>
                            <div class="video-testimonial-content">
                                "@video.Content"
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="stats-container">
            <h2 class="stats-title">Our Impact</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">@Model.Stats.EventsPlanned+</div>
                    <div class="stat-label">Events Planned</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@Model.Stats.ClientSatisfaction%</div>
                    <div class="stat-label">Client Satisfaction</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@Model.Stats.TrustedPartners+</div>
                    <div class="stat-label">Trusted Partners</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">@Model.Stats.EventCategories+</div>
                    <div class="stat-label">Event Categories</div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-container">
            <h2 class="cta-title">Ready to Create Your Perfect Event?</h2>
            <p class="cta-description">Join thousands of satisfied clients who have planned their dream events with LUMERA</p>
            <button class="cta-button" onclick="window.location.href='@Url.Action("Create", "Events")'">Start Planning Now</button>
        </div>
    </section>

 
</body>
</html>