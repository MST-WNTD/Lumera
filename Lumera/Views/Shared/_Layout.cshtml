@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lumera</title>

    <!-- Fonts & Styles -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>
</head>

<body>
    <!-- ==============================
         NAVIGATION BAR
    ============================== -->


    <nav class="navbar">
        <div class="nav-container">
            <a class="navbar-brand" href="/"><img src="~/img/lumera.png" style="height:3vh; " /></a>
            <div class="nav-links">
                <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
                <a href="@Url.Action("FindOrganizers", "Organizer")" class="nav-link">Find Organizers</a>
                <a href="@Url.Action("BrowseServices", "Services")" class="nav-link">Browse Services</a>
                <a href="@Url.Action("AIPlanner", "Home")" class="nav-link">Use AI Planner</a>
                <a href="@Url.Action("Index", "Testimonials")" class="nav-link">Testimonials</a>
                <a href="@Url.Action("LoginSignup", "Account")" class="nav-link">Login / Sign Up</a>
                <a href="@Url.Action("AIPlanner", "Home")" class="btn btn-primary nav-cta-btn">Plan Your Event Now</a>
            </div>
        </div>
    </nav>

    <!-- ==============================
         MAIN CONTENT AREA
    ============================== -->
    <div class="content-wrapper">
        @RenderBody()
    </div>

    <!-- ==============================
         FOOTER
    ============================== -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-brand">
                <div class="footer-logo">LUMERA</div>
                <p class="footer-description">
                    Connect with trusted organizers and suppliers. Customize your event with AI-powered recommendations.
                </p>
                <div class="social-links">
                    <a href="#" class="social-link"></a>
                    <a href="#" class="social-link"></a>
                    <a href="#" class="social-link"></a>
                </div>
            </div>

            <div class="footer-links">
                <div class="footer-column">
                    <h4>Product</h4>
                    <a href="#">Features</a>
                    <a href="#">Integrations</a>
                    <a href="#">Pricing</a>
                </div>
                <div class="footer-column">
                    <h4>Company</h4>
                    <a href="#">About Us</a>
                    <a href="#">Blog</a>
                    <a href="#">Customers</a>
                </div>
                <div class="footer-column">
                    <h4>Resources</h4>
                    <a href="#">Community</a>
                    <a href="#">Contact</a>
                    <a href="#">DPA</a>
                    <a href="#">Terms of Service</a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-divider"></div>
            <div class="footer-bottom-content">
                <p>&copy; @DateTime.Now.Year LUMERA. All rights reserved.</p>
                <a href="#">Terms & Conditions</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Home.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
